#include <stdio.h>
#include <stdlib.h>
int factorial(int);

int main()
{
    int factorial(int n)
    {
        if(n==1)
            return 1;
        else
            return n*factorial(n-1);
    }
    int num,result;
    printf("Enter the number:");
    scanf("%d",&num);
    if(num>0)
    {
        result=factorial(num);
        printf("Factorial of the number is = %d",result);
    }
    else if(num==0)
    {
        result=1;
        printf("Factorial of the number is = %d",result);
    }
    else
        printf("Factorial does not exist");
    return 0;
}
