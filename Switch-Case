#include <stdio.h>
#include <stdlib.h>

int main()
{
    int a,b,choice,result;
    printf("Enter first number: ");
    scanf("%d",&a);
    printf("Enter second number: ");
    scanf("%d",&b);
    printf("1.Addition\n2.Subtraction\n3.Multiplication\n4.Division\nEnter the option number:");
    scanf("%d",&choice);

    switch(choice)
    {
    case 1:
        result=a+b;
        printf("Sum is %d",result);
        break;
    case 2:
        result=a-b;
        printf("Difference is %d",result);
        break;
    case 3:
        result=a*b;
        printf("Product is %d",result);
        break;
    case 4:
        result=a/b;
        printf("Quotient is %d",result);
        break;
    }
    return 0;
}
