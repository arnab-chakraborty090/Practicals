#include <stdio.h>
#include <math.h>

int main()
{
    int a,b,c,D,root1,root2;
    printf("Enter the coefficients of the quadratic equation : ax^2+bx+c=0\n");
    scanf("%d%d%d",&a,&b,&c);
    D=(b*b)-(4*a*c);
    if(D>0)
    {
        root1=(-b+sqrt(D))/(2*a);
        root2=(-b-sqrt(D))/(2*a);
        printf("The roots of the quadratic equation %dx^2+%dx+%d are \n%d\n%d",a,b,c,root1,root2);
    }
    else if(D==0)
    {
        root2=-b/(2*a);
        root1=root2;
        printf("The root of the quadratic equation %dx^2+%dx+%d is \n%d",a,b,c,root1);
    }
    else
        printf("There are no real roots of the quadratic equation %dx^2+%dx+%d",a,b,c);
    return 0;
}
