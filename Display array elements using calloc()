#include <stdio.h>
#include <stdlib.h>


int main() {
    int n, i;
    int *ptr; // Pointer to hold the base address of the dynamically allocated array

    
    printf("Enter the number of elements for the array: ");
    if (scanf("%d", &n) != 1 || n <= 0) {
        printf("Invalid input. Please enter a positive integer.\n");
        return 1;
    }

   
    ptr = (int *)calloc(n, sizeof(int));

    
    if (ptr == NULL) {
        printf("Error: Memory allocation failed!\n");
        return 1;
    }

    printf("\nMemory allocated successfully using calloc. All initial values are set to 0.\n");
    printf("You can now enter %d integer elements:\n", n);

    
    for (i = 0; i < n; i++) {
        printf("Enter element %d: ", i + 1);
        if (scanf("%d", &ptr[i]) != 1) {
            printf("Invalid input. Exiting.\n");
            // Clean up before returning on error
            free(ptr);
            return 1;
        }
    }

    
    printf("\nThe elements of the array are:\n");
    for (i = 0; i < n; i++) {
        printf("Element %d (Address %p): %d\n", i + 1, (void *)&ptr[i], ptr[i]);
    }

   
    free(ptr);
    printf("\nMemory successfully freed.\n");

    return 0;
}
