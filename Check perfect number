#include <stdio.h>
#include <stdlib.h>

int main()
{
    int num,i,result=0;
    printf("Enter the number:");
    scanf("%d",&num);
    for(i=1;i<=num-1;i++)
    {
        if(num%i==0)
            result=result+i;
    }
    if(result==num)
        printf("Perfect Number");
    else
        printf("Not Perfect Number");
    return 0;
}
